
mixin crearRestaurante(restaurante = {})
  #account-settings.tab-pane.fade.in.active
    .tabs-wrp.account-settings.brd-rd5
      h4(itemprop='headline') ADMINISTRACIÓN DE RESTAURANTES
      .account-settings-inner
        .row
          .col-md-8.col-sm-8.col-lg-12
            .profile-info-form-wrap
              // Formulario
              form.profile-info-form(action=`/nuevo_Restaurante/${restaurante.id || ''}`  method="POST" encType="multipart/form-data")
                .row.mrg20
                  .col-md-12.col-sm-12.col-lg-12
                    label(for='nombre') Nombre
                    input(type='text', placeholder='Nombre' name="nombre" id="nombre" value =restaurante.nombre )
                  .col-md-12.col-sm-12.col-lg-12
                    label Descripción
                    input(type='text', placeholder='Descripción' id='descripcion' name="descripcion" value=restaurante.descripcion)
                  // Aquí va la imagen
                  if(restaurante.logo)
                    .col-md-6.col-sm-6.col-lg-6
                      .profile-img-upload-btn
                        br
                        br
                        br
                        label Imagen Actual
                        input#profile-upload(type='text' name="actual" value = `${restaurante.logo || 'sin selección'} ` readonly )
                  .col-md-6.col-sm-6.col-lg-6
                    .profile-img-upload-btn
                      if(restaurante.logo)
                        img(src=`/images/Restaurantes/${restaurante.logo}`, alt="Imagen Actal")
                  .col-md-12.col-sm-12.col-lg-12
                    .profile-img-upload-btn
                      label.fileContainer.brd-rd5.yellow-bg
                        | Elegir logo
                        input#profile-upload(type='file' name="logo" )
                    br
                    br
                    br
                  .col-md-6.col-sm-6.col-lg-6
                    label Categoría 
                    .select-wrp
                      select(name="nombreCategoria" value = nombreCategoria)
                        if(nombreCategoria)
                          option(selected='true') #{nombreCategoria}
                        if (lasCategorias)
                          each categoria in lasCategorias
                            option #{categoria.nombre} 
                  .col-md-6.col-sm-6.col-lg-6
                    label Teléfono 
                    input.brd-rd3(type='tel', placeholder='Telefono' id= 'telefono' name="telefono" value= restaurante.telefono)
                  .col-md-12.col-sm-12.col-lg-12
                    label Dirección
                    input.brd-rd3(type='text', placeholder='Dirección' id= 'direccion' name="direccion" value = restaurante.direccion)
                  .col-md-12.col-sm-12.col-lg-12
                    label Estado 
                    .select-wrp
                      select(name ="estado" value = estadoActual)
                        option Activo
                        option Inactivo
                  .rite-meta
                    input.view-more(type='submit', value=`${restaurante.nombre ? 'Guardar cambios' : 'Agregar'}`)
                    input.view-more(type='submit', value='Cancelar')