extends ./layoutCliente

block contenido
  // Hero
  section
    .block
      .fixed-bg(style='background-image: url(/assets/images/topbg.jpg);')
      .page-title-wrapper.text-center
        .col-md-12.col-sm-12.col-lg-12
          .page-title-inner
            h1(itemprop='headline') Ordena
            span La comida m√°s deliciosa de la ciudad
  div
  section
    .block.gray-bg.bottom-padd210.top-padd30
      .container
        .row
          .col-md-12
            .sec-box
              .sec-wrapper
                .col-md-8.col-sm-12.col-lg-8
                  .restaurant-detail-wrapper
                    .restaurant-detail-info
                      // SLIDER
                      .restaurant-detail-thumb
                        ul.restaurant-detail-img-carousel
                          li
                            img.brd-rd3(src='/assets/images/resource/restaurant-detail-big-img1-1.jpg', alt='restaurant-detail-big-img1-1.jpg', itemprop='image')
                      // PLATILLO
                      .restaurant-detail-title
                        h1(itemprop='headline') #{platillo.nombre}
                        .info-meta
                          span
                            a(href='#', title='', itemprop='url') #{platillo.restaurante}
                        span.price #{platillo.precio}
                        .qty-wrap
                          input.qty(type='text', value='1', min='1')
                        p(itemprop='description') #{platillo.descripcion}
                        br
                        a.brd-rd3(href='#', title='', itemprop='url') Ordenar
                // COMANDA
                .col-md-4.col-sm-12.col-lg-4
                  .order-wrapper
                    .order-inner.gradient-brd
                      h4(itemprop='headline') Tu orden
                      .order-list-wrapper
                        ul.order-list-inner
                          // Primer platillo
                          li
                            .dish-name
                              i .1
                              h6(itemprop='headline') Nombre
                              span.price Precio
                          // Platillo 2
                          li
                            .dish-name
                              i .2
                              h6(itemprop='headline') Chicken Tandoori Special
                              span.price $90.00
                          // Platillo 3
                          li
                            .dish-name
                              i .3
                              h6(itemprop='headline') Chicken Tandoori Special
                              span.price $100.00
                        // Subtotales
                        ul.order-total
                          li
                            span SubTotal
                            i $158
                          li
                            span Delivery fee
                            i $70
                          li
                            span Tax
                            i $12
                        ul.order-method.brd-rd2.red-bg
                          li
                            span Total
                            span.price $340
                          li
                            span.radio-box.cash-popup-btn
                              input#pay1-1(type='radio', name='method')
                              label(for='pay1-1')
                                i.fa.fa-money
                                |  Cash
                            span.radio-box.card-popup-btn
                              input#pay1-2(type='radio', name='method')
                              label(for='pay1-2')
                                i.fa.fa-credit-card-alt
                                |  Card
                          li
                            a.brd-rd2(href='#', title='', itemprop='url') Confirmar orden
